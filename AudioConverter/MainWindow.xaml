<Window x:Class="AudioConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio Converter" Height="250" Width="300"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop">
    <Grid>
        <Button x:Name="SelectFileButton" Content="Select File" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" Width="120" Click="SelectFileButton_Click"/>
        <Button x:Name="SelectFolderButton" Content="Select Folder" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" Width="120" Click="SelectFolderButton_Click"/>        
        <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Center" Margin="0,176,0,0" VerticalAlignment="Top" Width="120" Click="ConvertButton_Click"/>
        <Label x:Name="StatusLabel" Content="" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
